{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend",
      "request": "launch",
      "type": "node",
      "program": "${workspaceFolder}/src/server/main.ts",
      "cwd": "${workspaceFolder}/src/server",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all",
        "--unstable"
      ],
      "attachSimplePort": 9229
    },
    {
			"name": "sveltekit",
			"request": "launch",
			"runtimeArgs": ["run-script", "dev"],
			"runtimeExecutable": "npm",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/client"
		},
    {
			"type": "chrome",
			"request": "launch",
			"name": "browser",
			"url": "http://localhost:1420",
			"webRoot": "${workspaceFolder}/src/client/"
		},
    {
      "name": "Attach to Deno (when runs outside VS Code)",
      "type": "node",
      "request": "attach",
      "cwd": "${workspaceFolder}",
      "port": 9229,
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "tauri-development-debug",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=./src/client/src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      "preLaunchTask": "ui:dev"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "tauri-production-debug",
      "cargo": {
        "args": ["build", "--release", "--manifest-path=./src/client/src-tauri/Cargo.toml"]
      },
      "preLaunchTask": "ui:build"
    }
  ],
  "compounds": [
    {
			"name": "ðŸ‘‰ Launch Frontend+Browser",
			"configurations": ["sveltekit", "browser"]
		},
		{
			"name": "ðŸ‘‰ Launch Backend+Frontend+Browser",
			"configurations": ["backend", "sveltekit", "browser"]
		},
    {
			"name": "ðŸ‘‰ Launch Tauri",
			"configurations": ["tauri-development-debug"]
		}
	]
}